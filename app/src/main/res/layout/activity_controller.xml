<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#FFFFFF"
    tools:context="com.example.jessezhou.DrawbotRemote.ControllerActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/dPad">
        <Button
            style="@style/ButtonTheme"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:layout_centerVertical="true"
            android:text="lf"
            android:id="@+id/buttonLeft"/>
        <Button
            style="@style/ButtonTheme"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text="up"
            android:id="@+id/buttonForward"
            android:layout_above="@id/buttonLeft"
            android:layout_toRightOf="@id/buttonLeft"/>
        <Button
            style="@style/ButtonTheme"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text="rh"
            android:id="@+id/buttonRight"
            android:layout_toRightOf="@id/buttonForward"
            android:layout_below="@id/buttonForward"/>

        <Button
            style="@style/ButtonTheme"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:text="dn"
            android:id="@+id/buttonDown"
            android:layout_below="@id/buttonLeft"
            android:layout_toRightOf="@id/buttonLeft"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">

        <Button
            style="@style/ButtonTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DRAW THETA TAU"
            android:id="@+id/buttonDrawTT" />
        <Button
            style="@style/ButtonTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calibrate"
            android:id="@+id/buttonCalibrate" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
        <Button
            style="@style/ButtonTheme"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:id="@+id/buttonPenUp"
            android:text="Pen\nUp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/buttonDrawTT"/>

        <Button
            style="@style/ButtonTheme"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:id="@+id/buttonPenDown"
            android:text="Pen Down"
            android:layout_alignParentRight="true"
            android:layout_below="@id/buttonPenUp"/>
    </LinearLayout>




</RelativeLayout>
